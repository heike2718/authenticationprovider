{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ap-ws/common-utils": ["libs/common-utils/src/index.ts"],
      "@ap-ws/messages/api": ["libs/messages/api/src/index.ts"],
      "@ap-ws/messages/http": ["libs/http/src/index.ts"],
      "@ap-ws/messages/ui": ["libs/messages/ui/src/index.ts"],
      "@auth-app/auth/model": [
        "apps/auth-app/src/app/auth/model/src/index.ts"
      ],
      "@auth-app/auth/api": ["apps/auth-app/src/app/auth/api/src/index.ts"],
      "@auth-app/auth/data": ["apps/auth-app/src/app/auth/data/src/index.ts"],
      "@auth-app/forgot-password/api": [
        "apps/auth-app/src/app/forgot-password/api/src/index.ts"
      ],
      "@auth-app/forgot-password/data": [
        "apps/auth-app/src/app/forgot-password/data/src/index.ts"
      ],
      "@auth-app/forgot-password/feature": [
        "apps/auth-app/src/app/forgot-password/feature/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
