{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ap-ws/common-model": ["libs/common-model/index.ts"],
      "@ap-ws/common-utils": ["libs/common-utils/index.ts"],
      "@ap-ws/messages/api": ["libs/messages/api/index.ts"],
      "@ap-ws/messages/ui": ["libs/messages/ui/index.ts"],
      "@auth-app/auth/api": ["apps/auth-app/src/app/auth/api/index.ts"],
      "@auth-app/auth/data": ["apps/auth-app/src/app/auth/data/index.ts"],
      "@auth-app/auth/model": ["apps/auth-app/src/app/auth/model/index.ts"],
      "@auth-app/forgot-password/api": [
        "apps/auth-app/src/app/forgot-password/api/index.ts"
      ],
      "@auth-app/forgot-password/data": [
        "apps/auth-app/src/app/forgot-password/data/index.ts"
      ],
      "@auth-app/forgot-password/feature": [
        "apps/auth-app/src/app/forgot-password/feature/index.ts"
      ],
      "@profil-app/auth/api": ["apps/profil-app/src/app/auth/api/index.ts"],
      "@profil-app/auth/data": [
        "apps/profil-app/src/app/auth/data/index.ts"
      ],
      "@profil-app/auth/model": [
        "apps/profil-app/src/app/auth/model/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
